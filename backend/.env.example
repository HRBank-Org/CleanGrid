# CleanGrid Backend Environment Variables
# Copy this file to .env and fill in your actual values

# MongoDB Atlas Connection
MONGO_URL="mongodb+srv://username:password@cluster.mongodb.net/cleangrid_db?retryWrites=true&w=majority"
DB_NAME="cleangrid_db"

# Security
SECRET_KEY="your-secret-key-generate-with-python-secrets-token_urlsafe-32"
FRONTEND_URL="https://cleangrid.at"

# HR Bank Integration
HRBANK_API_URL="https://your-hrbank-instance.com"
HRBANK_API_KEY="your-hrbank-api-key"

# Stripe Payment Processing (use test keys for development)
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"

# SendGrid Email Service
SENDGRID_API_KEY="SG.your_sendgrid_api_key"
SENDGRID_FROM_EMAIL="noreply@cleangrid.at"
SENDGRID_FROM_NAME="CleanGrid"

# Twilio SMS Service
TWILIO_ACCOUNT_SID="your_twilio_account_sid"
TWILIO_AUTH_TOKEN="your_twilio_auth_token"
TWILIO_PHONE_NUMBER="+1234567890"
